@model List<Produto>

<h2>Lista de Produtos</h2>

<p>
    <a asp-action="Create">Adicionar Produto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ProdutoId</th>
            <th>Nome do Produto</th>
            <th>Valor</th>
            <th>Estoque</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.ProdutoId</td>
                <td>@produto.NomeProduto</td>
                <td>@produto.Valor</td>
                <td>@produto.Estoque</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@produto.ProdutoId">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@produto.ProdutoId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>